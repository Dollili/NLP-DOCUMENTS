    <!-- 패키지별 로그 레벨 설정 -->
    <logger name="rag" level="DEBUG" />
    <logger name="rag.service" level="INFO" />
    <logger name="rag.controller" level="INFO" />

    <!-- Root 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
